<!DOCTYPE html>
<html lang="pl">
<head>
	<meta charset="UTF-8" />
	<title>{% block title %}SmartKill{% endblock %}</title>
	
	{% block stylesheets %}
		<link href="{{ asset('style/style.css') }}" type="text/css" rel="stylesheet" />
	{% endblock %}
	
	{% block javascripts %}
		<script src="{{ asset('js/modernizr.js') }}" type="text/javascript"></script>
		<script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
		<script src="{{ asset('js/jquery.ui.js') }}" type="text/javascript"></script>
		<script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
		<script src="{{ asset('js/datepicker.js') }}" type="text/javascript"></script>
		<script src="{{ asset('js/main.js') }}" type="text/javascript"></script>
	{% endblock %}
	
	<link rel="icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
	<section class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<div class="nav-collapse collapse">
					{% if app.user %}
						<p class="navbar-text pull-right">
							Witaj <strong><a href="{{ path('user', {username: app.user.username}) }}" class="navbar-link">{{ app.user.username }}</a></strong> |
							<a href="{{ path('profile') }}" class="navbar-link">Profil</a> |
							<a href="{{ path('logout') }}" class="navbar-link">Wyloguj</a>
						</p>
					{% else %}
						<form action="{{ path('login_check') }}" method="post" class="navbar-form pull-right">
							<input type="text" name="_username" class="span2" placeholder="Login">
							<input type="password" name="_password" class="span2" placeholder="Hasło">
							<button type="submit" class="btn">Zaloguj</button>
						</form>
					{% endif %}
					
					<ul class="nav">
						{% set r = app.request.get('_route') %}
						<li{% if r=='index'   %} class="active"{% endif %}><a href="{{ path('index') }}">Strona główna</a></li>
						<li{% if r=='matches' %} class="active"{% endif %}><a href="{{ path('matches') }}">Mecze</a></li>
						<li{% if r=='ranking' %} class="active"{% endif %}><a href="{{ path('ranking') }}">Ranking</a></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
    
	<section class="container">
		<div id="top" class="{% block top %}{% endblock %}">
			<a href="{{ path('index') }}"><img src="{{ asset('style/logo.png') }}" alt="" /></a>
			
			<h1>
				<a href="#">SmartKill</a><br />
				<small>Miejskie polowanie telefonem</small>
			</h1>
		</div>
		
		{% for flashMessage in app.session.flashbag.get('error') %}
			<div class="alert alert-error fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				{{ flashMessage }}
			</div>
		{% endfor %}
		
		{% for flashMessage in app.session.flashbag.get('success') %}
			<div class="alert alert-success fade in">
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				{{ flashMessage }}
			</div>
		{% endfor %}
		
		{% block content %}
		
		{% endblock %}
		
		<footer id="footer">
			<ul>
				<li><a href="{{ path('static_rules') }}">Reguły gry</a></li>
				<li><a href="{{ path('static_contact') }}">Kontakt</a></li>
			</ul>
			© SmartKill 2012
		</footer>
	</section>
</body>
</html>
